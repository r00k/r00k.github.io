{
  "name": "r00k.github.io",
  "version": "1.0.0",
  "description": "Code for benorenstein.com.",
  "main": "live-reload.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "npx tailwindcss -i ./css/tailwind.css -o ./assets/css/main.css",
    "watch:css": "npx tailwindcss -i ./css/tailwind.css -o ./assets/css/main.css --watch",
    "build:jekyll": "bundle exec jekyll build",
    "watch:jekyll": "bundle exec jekyll serve",
    "livereload": "ruby livereload.rb",
    "dev": "npm-run-all --parallel watch:css watch:jekyll",
    "dev:live": "npm-run-all --parallel watch:css watch:jekyll livereload",
    "build": "npm-run-all build:css build:jekyll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r00k/r00k.github.io.git"
  },
